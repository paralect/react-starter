.label {
  position: relative;
  display: flex;
  flex-direction: column;

  >:first-child {
    margin: 2px 0 1px 0;
  }
}

.select {
  margin-top: 6px;
  outline: none;
  transition: all 0.2s ease-in-out;

  [class$='-control'] {
    width: 100%;
    min-width: 200px;
    display: flex;
  }

  [class$='-control']:hover {
    border-color: var(--gray);
  }

  [class$='-control']:active,
  [class$='-control']:focus {
    border-color: var(--blue);
  }

  [class$='-ValueContainer'] {
    padding: 8px 12px 2px 12px;
  }

  [class$='-control--menu-is-open'] {
    border-color: var(--blue);
  }

  [class$='-placeholder'] {
    color: var(--gray-dark);
  }

  [class$='-Input'] {
    margin-top: -6px;
  }

  [class$='-control--is-focused'] {
    border-color: var(--blue);
  }

  [class$='multi-value__label'] {
    height: 16px;
    padding: 0 4px 0 0;
    line-height: 16px;
  }

  [class$='multi-value__remove'] {
    padding: 0;
    color: var(--gray-dark);
  }

  [class$='multi-value'] {
    margin: 0 6px 6px 0;
  }

  &.error {
    [class$='-control']:hover {
      border-color: var(--red) !important;
    }
  }
}

.errorMessage {
  margin-top: 2px;
  color: var(--red);
  font-size: 12px;
  line-height: 15px;
  word-wrap: break-word;
}

.title {
  margin-bottom: 4px;
  font-size: 14px;
  font-weight: 500;

  &.error {
    color: var(--red);
    font-size: 14px;
  }
}

.selectLabel {
  font-weight: 500;
  line-height: 17px;
  font-size: 14px;
  transition: all 0.2s ease-in-out;

  &.error {
    color: var(--red) !important;
  }
}
