.label {
  position: relative;
  display: flex;
  flex-direction: column;
  font-size: 14px;

  >:first-child {
    margin: 2px 0 1px 0;
  }

  &:focus-within {
    color: var(--blue);
  }
}

.select {
  margin-top: 5px;
  outline: none;
  transition: all 0.2s;

  [class$='-control'] {
    width: 100%;
    min-width: 200px;
    max-height: 40px;
    display: flex;
    align-items: flex-start;
  }

  [class$='-control']:hover {
    border-color: var(--gray);
  }

  [class$='-control']:active,
  [class$='-control']:focus {
    border-color: var(--blue);
  }

  [class$='-ValueContainer'] {
    padding: 5px 12px;
  }

  [class$='-control--menu-is-open'] {
    border-color: var(--blue);
  }

  [class$='-placeholder'] {
    color: var(--gray-dark);
  }

  [class$='-control--is-focused'] {
    border-color: var(--blue);
  }

  &.error {
    [class$='-control']:hover {
      border-color: var(--red) !important;
    }
  }
}

.error {
  margin-top: 5px;
  color: var(--red);
  word-wrap: break-word;
  font-weight: normal;
  font-size: 12px;
}

.title {
  margin-bottom: 4px;
  font-size: 14px;
  font-weight: 500;

  &.error {
    color: var(--red);
  }
}
