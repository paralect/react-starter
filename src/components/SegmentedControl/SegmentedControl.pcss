.container {
  max-width: fit-content;
  padding: 3px;
  border: 1px solid var(--gray);
  border-radius: 3px;
  display: flex;
}

.segment {
  border-radius: 4px;
  padding: 6px 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  line-height: 21px;

  &.active {
    background-color: var(--black);
    color: var(--white);
  }
}
