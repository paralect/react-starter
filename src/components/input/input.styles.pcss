.input {
  height: 40px;
  width: 100%;
  min-width: 200px;
  margin-top: 5px;
  padding: 0 14px;
  background: var(--white);
  border: 1px solid var(--gray);
  box-sizing: border-box;
  border-radius: 6px;
  outline: none;
  font-size: 14px;
  line-height: 17px;
  transition: all 0.2s ease-in-out;

  &:focus {
    border: 1px solid var(--blue);
  }

  &:hover:not(:focus):not(.disabled) {
    border: 1px solid var(--gray-dark);
  }

  &::placeholder {
    color: var(--gray-dark);
  }

  &.error {
    border-color: var(--red);

    &:focus {
      border-color: var(--red);
    }

    &:hover:not(:focus) {
      border-color: var(--red);
    }
  }

  &.disabled {
    background: var(--gray-light);
    pointer-events: none;
    color: var(--gray);
  }
}

.errors {
  font-size: 12px;
  color: var(--red);
  margin-top: 5px;
}

label:focus-within:not(.disabled) {
  color: var(--blue);
}

.label {
  font-weight: 500;
  line-height: 17px;
  font-size: 14px;
  transition: all 0.1s ease-in-out;

  &.error {
    color: var(--red) !important;
  }
}
